# App
SECRET_KEY='secret-key'
LITESTAR_DEBUG=true
LITESTAR_HOST=0.0.0.0
LITESTAR_PORT=8089
APP_URL=http://localhost:${LITESTAR_PORT}
LOG_LEVEL=10
MUST_VERIFY_EMAIL=true

# Session
SESSION_COOKIE_NAME=session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=lax
SESSION_MAX_AGE=3600
SESSION_RENEW_ON_ACCESS=true

# Database
DATABASE_ECHO=true
DATABASE_ECHO_POOL=true
DATABASE_POOL_DISABLE=false
DATABASE_POOL_MAX_OVERFLOW=5
DATABASE_POOL_SIZE=5
DATABASE_POOL_TIMEOUT=30
DATABASE_URL=postgresql+asyncpg://app:app@localhost:15432/app

# Vite (litestar-vite auto-manages host/port)
VITE_DEV_MODE=true

# Email (litestar-email plugin)
EMAIL_ENABLED=false
EMAIL_BACKEND=console
EMAIL_FROM=noreply@localhost
EMAIL_FROM_NAME=My App
# Resend settings (only needed if EMAIL_BACKEND=resend)
# RESEND_API_KEY=re_xxxxxxxxxxxx
