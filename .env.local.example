# App
SECRET_KEY='secret-key'
LITESTAR_DEBUG=true
LITESTAR_HOST=0.0.0.0
LITESTAR_PORT=8089
APP_URL=http://localhost:${LITESTAR_PORT}
LOG_LEVEL=10

# Database
DATABASE_ECHO=true
DATABASE_ECHO_POOL=true
DATABASE_POOL_DISABLE=false
DATABASE_POOL_MAX_OVERFLOW=5
DATABASE_POOL_SIZE=5
DATABASE_POOL_TIMEOUT=30
DATABASE_URL=postgresql+asyncpg://app:app@localhost:15432/app

# Vite (litestar-vite auto-manages host/port)
VITE_DEV_MODE=true

# Email
EMAIL_ENABLED=false
EMAIL_BACKEND=console
EMAIL_FROM=noreply@localhost
# SMTP settings (only needed if EMAIL_BACKEND=smtp)
# EMAIL_SMTP_HOST=smtp.example.com
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_USER=
# EMAIL_SMTP_PASSWORD=
# EMAIL_SMTP_USE_TLS=true
# EMAIL_SMTP_USE_SSL=false
