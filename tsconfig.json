{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",


    /* Bundler mode */
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowJs": true,

    /* Linting */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src/resources",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["vite/client","node","md5"]
  },
  "include": [
    "src/resources/**/*.d.ts",
    "src/resources/**/*.tsx",
    "src/resources/**/*.jsx",
    "src/resources/**/*.js",
    "src/resources/**/*.ts",
    "src/vite.config.ts",
    "vite.config.js"
  ]
}
